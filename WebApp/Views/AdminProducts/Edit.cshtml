@model WebApp.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<article class="col-8 mx-auto mb-5 mt-4">
    <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mt-5 mx-auto text-uppercase">EDITAR PRODUCTO</h2>
</article>
<div class="container-fluid w-50">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="name" class="control-label">Nombre</label>
            <input asp-for="name" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label">Descripción</label>
            <input asp-for="description" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="gender" class="control-label">Género</label>
            <select class="form-group form-control" asp-for="gender">
                <option disabled selected value="">Seleccione un género</option>
                <option value="hombre">Hombre</option>
                <option value="mujer">Mujer</option>
                <option value="niños">niños</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="price" class="control-label">Precio</label>
            <input asp-for="price" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="stock" class="control-label">Stock</label>
            <input asp-for="stock" class="form-control" />

        </div>
        <label asp-for="image" class="control-label">Imagen</label>
        <select class="form-group form-control" asp-for="image">
            <option disabled selected value="">Seleccione una imagen</option>
            <option valu e="/images/zapatillas/airazul.jpg">Air Max Azules</option>
            <option value="/images/zapatillas/airblancas.jpg">Air Max Blancas</option>
            <option value="/images/zapatillas/airverdes.jpg">Air Max Verdes</option>
            <option value="/images/zapatillas/airforcecelestes.jpg">Air Force Celestes</option>
            <option value="/images/zapatillas/buzenitzcrema">Adidas Buzenitz Crema</option>
            <option value="/images/zapatillas/superstarblanca.jpg">Superstar Blancas</option>
            <option value="/images/zapatillas/superstarnegras.jpg">Superstar Negras</option>
            <option value="/images/zapatillas/smithazul.jpg">Adidas Smith Azules</option>
        </select>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark" />
        </div>
    </form>
    <div class="form-group">
        <a class="btn btn-dark" asp-action="Index">Volver</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

